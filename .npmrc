
# ðŸ“¦ Install performance and reliability
network-timeout=600000
fetch-retries=3
fetch-retry-mintimeout=5000
fetch-retry-maxtimeout=60000
loglevel=error
fund=false
audit=false

# ðŸš« Prevent browser binary downloads (Puppeteer, Playwright, Chromium, etc.)
PUPPETEER_SKIP_DOWNLOAD=true
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
SKIP_PUPPETEER_DOWNLOAD=true
PUPPETEER_NO_DOWNLOAD=true
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=true

# ðŸš« Disable browser bin usage
CHROME_BIN=/bin/false
CHROMIUM_BIN=/bin/false
PUPPETEER_EXECUTABLE_PATH=/bin/false

# ðŸ›‘ Disable native dependency issues (Rollup, Puppeteer, etc.)
optional=false
ignore-scripts=true
legacy-peer-deps=true

# ðŸš« Prevent native Rollup binaries
ROLLUP_NATIVE=false
npm_config_target_platform=
npm_config_target_arch=
npm_config_cache_max=0
